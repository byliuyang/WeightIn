{
  "manifest_version": 2,
  "name": "WeighIn",
  "description": "This extension allows users to highlight and comment on articles",
  "version": "1.0",
  "browser_action": {
    "default_icon": "assets/images/icon128-grey.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png",
    "256": "assets/images/icon256.png"
  },
  "background": {
    "scripts": ["app/services/context-menu.service.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["app/components/app.component.css", "app/components/sidebar.component.css", "app/components/message-box.component.css"],
      "js": ["node_modules/moment/min/moment.min.js", "app/services/app-state.service.js", "app/components/sidebar.component.js","app/components/message-box.component.js", "app/components/app.component.js"]
    }
  ],
  "permissions": [
    "storage",
    "contextMenus"
  ]
}
