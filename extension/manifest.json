{
  "manifest_version": 2,
  "name": "WeighIn",
  "description": "Highlight and comments on paragraphs",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["styles/style.css"],
      "js": ["scripts/app/app.js"]
    }
  ],
  "permissions": ["storage"]
}