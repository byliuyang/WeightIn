{
  "manifest_version": 2,
  "name": "WeighIn",
  "description": "This extension allows users to highlight and comment on articles",
  "version": "1.0",
  "background": {
    "page":"highlighter.html"
  },
  "page_action": {
    "default_title":"WeighIn"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["script.js"]
    }
  ],
  "permissions": [ "tabs" ]
}
